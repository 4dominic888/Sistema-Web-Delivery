@using Delivery.Domain.Food;
@model Comida;

@{
    IEnumerable<CaracteristicaComida> comidaCaracteristicas = Enumerable.Empty<CaracteristicaComida>();
    if (ViewBag.caracteristicas2 is not null)
    {
        comidaCaracteristicas = ViewBag.caracteristicas2;
    }

}

@*Elegir característica*@
<div class="modal fade" id="elegirCaracteristicaComida" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">¿Qué quisieras agregar?</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="col input-group">
                    <select class="form-select">
                        <option class="overflow-auto" selected disabled hidden value="">Agrega características</option>
                        @foreach (var item in comidaCaracteristicas)
                        {
                            <option value="@item.Id" title="@item.Detalle">@item.Nombre</option>
                        }
                    </select>
                    <button class="btn btn-secondary">Agregar</button>
                </div>
                <ul class="list-group mt-3">
                    <li class="list-group-item">An active item <button type="button" class="btn-close" style="padding-top: 15px;"></button> </li>
                    <li class="list-group-item">A second item <button type="button" class="btn-close" style="padding-top: 15px;"></button> </li>
                    <li class="list-group-item">A third item <button type="button" class="btn-close" style="padding-top: 15px;"></button> </li>
                    <li class="list-group-item">A fourth item</li>
                    <li class="list-group-item">And a fifth one</li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success">Guardar</button>
            </div>
        </div>
    </div>
</div>
